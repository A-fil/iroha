include "commands.fbs";
include "primitives.fbs";

namespace iroha;

table Transaction {
  creatorPubKey:   string      (required);
  command:         Command     (required);
  signatures:      [ubyte]     (required, nested_flatbuffer: "Signatures");
  hash:            [ubyte];
  attachment:      Attachment;
}

table Attachment {
  mime: string;
  data: [ubyte];
}